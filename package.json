{
  "name": "adam-component-library",
  "version": "0.0.5",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint 'src/**/*.{js,jsx}'",
    "lint:fix": "eslint --fix 'src/**/*.{jsx}'",
    "format": "prettier --write src//**/*.{js,jsx,css} --config ./.prettierrc",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn eslint",
      "yarn format"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/react-vite-library.es.js",
      "require": "./dist/react-vite-library.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "main": "./dist/react-vite-library.umd.js",
  "module": "./dist/react-vite-library.es.js",
  "devDependencies": {
    "@vitejs/plugin-react": "^2.1.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vite": "^3.1.0"
  },
  "peerDependencies": {
    "react": "16.8.0 || >=17.x",
    "react-dom": "16.8.0 || >=17.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamsimonini/react-vite-library"
  },
  "keywords": [],
  "author": "adam simonini",
  "bugs": {
    "url": "https://github.com/adamsimonini/adam-component-library/issues"
  },
  "homepage": "https://github.com/adamsimonini/adam-component-library#readme",
  "license": "MIT"
}
